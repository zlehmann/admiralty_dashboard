<!DOCTYPE html>
<html>
  <head>
    <title>AdmiraltyDashboard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:error] %>
      <%= flash[:error] %>
    <% end %>
    <% if current_user %>
      <div id="navbar">
        <ul>
          <li>Home</li>
          <li>Captains</li>
          <li>Ships</li>
          <li>Actions</li>
          <li><%= link_to "Log Out", logout_path, method: "delete" %></li>
        </ul>
      </div><!-- End of navbar -->
    <% end %>

    <%= yield %>
  </body>
</html>
